[user]
    email = felix.windsheimer@fau.de
    name = Felix Windsheimer
[alias]
    a = add
    ap = add --patch
    ci = commit --verbose
    c = commit --message
    ca = commit --all
    cam = commit --all --message
    cfu = !echo git commit --fixup=$1 && git rebase --autosquash
    ame = commit --amend --no-edit
    amee = commit --amend
    p = push
    pl = pull
    cl = clone

    s = status
    sa = status --ignored --untracked-files
    sr = !git remote show origin | tail -n 1 | sed 's/.*(\\(.*\\))/\\1/'
    l = log
    d = diff
    db = diff --ignore-space-change
    dc = diff --cached
    sh = show

    br = branch
    co = checkout
    un = reset HEAD --
    unp = reset HEAD --patch --
    ri = rebase --interactive
    rc = rebase --continue
    st = stash
[push]
    autoSetupRemote = true
